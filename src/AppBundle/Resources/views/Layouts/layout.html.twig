<!Doctype HTML>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="utf-8">
    <title>
        {% block title %} Network {% endblock %}
    </title>

    {% block stylesheets %}
        <link href="{{ asset('assets/bootstrap/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet"/>
        <link href="{{ asset('assets/css/bootstrap.cosmo.min.css') }}" type="text/css" rel="stylesheet"/>
        <link href="{{ asset('assets/css/styles.css') }}" type="text/css" rel="stylesheet"/>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
              integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
              crossorigin="anonymous">
    {% endblock %}
    {% block javascript %} <!--javascript--> {% endblock %}
    <script type="text/javascript">
        var URL = "{{ app.request.getSchemeAndHttpHost() }}/curso-social-network/web/app_dev.php";
    </script>
    <script src="{{ asset('assets/js/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/bootstrap/js/bootstrap.min.js') }}"></script>
</head>

<body>

<header class="container border">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path("app_homepage") }}"> home page <span
                                class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path("login") }}">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path("register") }}">Sign Up</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                </li>
            </ul>
            {% if app.user != null %}
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a class="drowpdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">
                            {{ app.user.name }} {{ app.user.surname }}
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="">My Profile</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="{{ path("logout") }}">Logout</a></li>
                            <li><a href="">Help</a></li>
                        </ul>
                    </li>
                </ul>
            {% endif %}
        </div>
    </nav>
    {#<h1>the headers</h1>
    <a class="navbar-brand" href="{{ path("app_homepage") }}">La femme home page</a>
    <a href="{{ path("login") }}">Login</a>
    <a href="{{ path("register") }}">Sign Up</a>#}
</header>

<section id="content">
    <div class="container">
        <div class="col-lg-12">
            {% for message in app.session.flashbag().get('status') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
        </div>
    </div>
    <div class="clearfix"></div>
    {% block content %}
        content default  {% endblock %}

</section>

<footer class="col-lg-12">
    <hr>
    <div class="container">
        <p>Hiskander Aguillon Web Developer</p>
    </div>

</footer>
</body>
</html>